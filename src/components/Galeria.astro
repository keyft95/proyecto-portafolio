    "/galeria/BaulaImg1.png",

];
---

<h2 class="products-title text-[#9f8070] text-bold">Â¡Un poco de mis proyectos!</h2>
    <div class="carousel">
        <div class="carousel-track">
            {images.map((url)=>
                <div class="product">
                    <img src={url} alt="" />
                </div>
            )}
        </div>
    </div>

<style>

@keyframes scroll {
    0%{
        transform: translateX(0);
    }
    100%{
        transform: translateX(calc(-250px * 7));
    }
}

.h3 {
    padding-bottom: 30px;
}

.carousel{
    height: 400px;
    margin: auto;
    overflow: hidden;
    position: relative;
    width: 80%;
}

.carousel::before, .carousel::after {
    background: linear-gradient(to right,#fde7e3 0%, rgba(255,255,255,0)100%);
    content: "";
    height: 400px;
    position: absolute;
    width: 300px;
    z-index: 1;
}

.carousel::after{
    right: 0;
    top: 0;
    transform: rotateZ(180deg);
}

.carousel::before{
    left: 0;
    top: 0;
}

.carousel .carousel-track{
    animation: scroll 30s linear infinite;
    display: flex;
    justify-content: space-between;
    width: calc(250px * 14);
}                  

.carousel .product{
    height: 400px;
    width: auto;
}

.product img{
    height: 400px;
    width: auto;
}

@media (max-width: 1624px) and (min-width: 1100px){
    .carousel::before, .carousel::after{
        width: 250px;
    }
    .btns{
        width: 60%;
    }
}

@media (max-width: 1100px) and (min-width: 500px){
    .carousel, .carousel .product, .product img{
        height: 300px;
    }

    .carousel .carousel-track{
        justify-content: normal;
    }

    .carousel::before, .carousel::after{
        width: 150px;
    }

</style>
        